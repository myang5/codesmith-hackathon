{
  "name": "Snooze News",
  "version": "1.0",
  "description": "Take a negative news break and recharge",
  "permissions": ["tabs", "activeTab", "declarativeContent","storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/live-news16.png",
      "32": "images/live-news32.png",
      "48": "images/live-news48.png",
      "128": "images/live-news128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.nytimes.com/*"],
      "js": ["blur/blur.js"]
    }
  ],
  "icons": {
    "16": "images/live-news16.png",
    "32": "images/live-news32.png",
    "48": "images/live-news48.png",
    "128": "images/live-news128.png"
  },
  "manifest_version": 2
}